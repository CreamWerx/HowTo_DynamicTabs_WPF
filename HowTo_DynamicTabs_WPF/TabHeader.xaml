<UserControl
    x:Class="HowTo_DynamicTabs_WPF.TabHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HowTo_DynamicTabs_WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button
            Grid.Column="2"
            Width="20"
            Height="19"
            Margin="0,3,4,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="White"
            Click="button_close_Click"
            Content="X"
            FontFamily="Courier"
            FontSize="14"
            FontStretch="Normal"
            FontWeight="Bold" />
        <Label
            x:Name="TabLabel"
            Grid.ColumnSpan="2"
            Height="23"
            Margin="4,1,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="Courier"
            FontSize="12" />
    </Grid>
</UserControl>
